<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
     <property name= "hibernate.connection.provider_class ">org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider</property>
<property name="hibernate.c3p0.max_size">50</property>
<property name="hibernate.c3p0.timeout">2000</property>
<property name="hibernate.c3p0.max_statements">100</property>
<property name="hibernate.c3p0.idle_test_period">2000</property>
<property name="hibernate.c3p0.acquire_increment">1</property>
<property name="hibernate.c3p0.min_size">1</property>
        <!-- 配置二级缓存 ，不启用二级缓存-->
<property name="cache.use_second_level_cache">false</property>
<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
<property name="house-keeping-sleep-time">100</property>
<property name="connection.username">mtbf</property>
<property name="connection.password">mtbf</property>
<property name="connection.url">jdbc:mysql://localhost:3306/mtbf_ui</property>
<property name="connection.driver_class">org.gjt.mm.mysql.Driver</property>
<property name="show_sql">true</property>
<property name="hbm2ddl.auto">update</property>
    	<!-- Model属性与数据库字段的映射文件 -->
    	<mapping class="com.spreadtrum.mtbf_ui.model.MTBF_uiForm" />
    	<mapping class="com.spreadtrum.mtbf_ui.model.MTBF_uiErrorInfo" />
    	<mapping class="com.spreadtrum.mtbf_ui.model.MTBF_uiCaseInfo" />
    	<mapping class="com.spreadtrum.mtbf_ui.model.MTBF_uiProjectInfo" />

    </session-factory>

</hibernate-configuration>

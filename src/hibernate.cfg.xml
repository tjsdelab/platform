<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="connection.url">jdbc:mysql://10.5.2.48:3306/platform</property>
    	<property name="connection.username">platform</property>
    	<property name="connection.password">platform</property>
    	<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.autoReconnect">true</property>
        <property name="connection.autoReconnectForPools">true</property>
        <property name="connection.is-connection-validation-required">true</property>
    	<!-- 设置dialect属性可以使用该类型数据库特性 -->
    	<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    	<!-- Disable the second-level cache  -->
        <property name="cache.provider_class">classname.of.CacheProvider</property>
        <!-- 配置二级缓存 ，不启用二级缓存-->
        <property name="cache.use_second_level_cache">false</property>
        
        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>
        
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">update</property>
    	<!-- 在命令行输出SQL语句 -->
    	<property name="show_sql"></property>
    	<!-- Model属性与数据库字段的映射文件 -->
    	<mapping resource="com/spreadtrum/model/IndexPage.hbm.xml" />
    	<mapping resource="com/spreadtrum/model/News.hbm.xml" />
    	<mapping resource="com/spreadtrum/model/TestInfo.hbm.xml" />
    	<mapping class="com.spreadtrum.monkeytest.model.TestForm" />
    	<mapping class="com.spreadtrum.monkeytest.model.VersionType" />
    	<mapping class="com.spreadtrum.monkeytest.model.DeviceInfo" />
    	<mapping class="com.spreadtrum.monkeytest.model.PhoneTestInfo" />
    	<mapping class="com.spreadtrum.monkeytest.model.ErrorType" />
    	<mapping class="com.spreadtrum.monkeytest.model.BugInfo" />
    	<mapping class="com.spreadtrum.monkeytest.model.ErrorInfo" />
    	<mapping class="com.spreadtrum.monkeytest.model.ProjectForm" />
    </session-factory>
</hibernate-configuration>

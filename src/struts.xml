<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- 允许访问静态成员 -->
	<constant name="struts.ognl.allowStaticMethodAccess" value="true"></constant>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.enable.DynamicMethodInvocation" value="true"></constant>
	<package name="hello" extends="struts-default">
		<interceptors>
			<interceptor name="loginInterceptor"
				class="com.spreadtrum.interceptor.LoginInterceptor" />
			<interceptor-stack name="mystack">
				<interceptor-ref name="loginInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<!-- 一个action类可以被多个action映射，每个action可以对应到一个类的方法上 -->
		<default-action-ref name="error"></default-action-ref>
		<action name="login" class="com.spreadtrum.action.IndexPageAction">
			<result name="success">/index.jsp</result>
			<result name="error">/error.jsp</result>
			<result type="redirectAction" name="formName">
				<param name="actionName">project</param>
				<param name="testFormName">${testFormName}</param>
			</result>
		</action>
		<action name="error">
			<result>/error.jsp</result>
		</action>

		<action name="monkey"
			class="com.spreadtrum.monkeytest.action.MonkeyHomeManagerAction">
			<result name="success">/monkey.jsp</result>
			<result type="redirectAction" name="jump">
				<param name="actionName">project</param>
				<param name="sortedProjectList">${sortedProjectList}</param>
				<param name="projectSearchNameString">${projectSearchNameString}</param>
			</result>
		</action>

		<action name="project"
			class="com.spreadtrum.monkeytest.action.MonkeyDetailAction" method="monkeyDetail">
			<result name="success">/project.jsp</result>
			<result name="search">/formName.jsp</result>
		</action>

		<action name="rdtest"
			class="com.spreadtrum.monkeyForRD.action.MonkeyForRDHomeAction"
			method="execute">
			<result name="success">/rd.jsp</result>
		</action>

		<action name="download"
			class="com.spreadtrum.monkeytest.action.ProjectDownloadAction">
			<result type="stream">
				<param name="bufferSize">2048</param>
			</result>
		</action>

		<action name="sanity"
			class="com.spreadtrum.sanity_smoke.action.SanityHomeManagerAction">
			<result name="success">/sanity.jsp</result>
			<result type="redirectAction" name="search">
				<param name="actionName">sanityForm</param>
				<param name="type">${type}</param>
				<param name="searchProject">${searchProject}</param>
			</result>
		</action>

		<action name="sanityForm"
			class="com.spreadtrum.sanity_smoke.action.SanityFormNameAction">
			<result name="success">/SanityFormName.jsp</result>
		</action>

		<action name="smoke"
			class="com.spreadtrum.sanity_smoke.action.SmokeHomeManagerAction">
			<result name="success">/smoke.jsp</result>
			<result type="redirectAction" name="search">
				<param name="actionName">smokeForm</param>
				<param name="type">${type}</param>
				<param name="searchProject">${searchProject}</param>
			</result>
		</action>

		<action name="smokeForm"
			class="com.spreadtrum.sanity_smoke.action.SmokeFormNameAction">
			<result name="success">/SmokeFormName.jsp</result>
		</action>

		<action name="sanity_download"
			class="com.spreadtrum.sanity_smoke.action.SanityFileDownload">
			<result type="stream">
				<param name="bufferSize">2048</param>
			</result>
		</action>

		<action name="smoke_download"
			class="com.spreadtrum.sanity_smoke.action.SmokeFileDownload">
			<result type="stream">
				<param name="bufferSize">2048</param>
			</result>
		</action>


		<action name="cts" class="com.spreadtrum.cts.action.CTSHomeAction"
			method="execute">
			<result name="success">/cts.jsp</result>

		</action>

		<action name="ctsForm" class="com.spreadtrum.cts.action.CTSFormSearchAction">
			<result name="success">/ctsTestInfoList.jsp</result>
		</action>


		<action name="mtbf" class="com.spreadtrum.mtbf.action.MTBFHomeAction"
			method="execute">
			<result name="success">/mtbf.jsp</result>
			<result type="redirectAction" name="search">
				<param name="actionName">mtbfForm</param>
				<param name="type">${type}</param>
				<param name="searchProject">${searchProject}</param>
			</result>
		</action>

		<action name="mtbfForm" class="com.spreadtrum.mtbf.action.MTBFFormSearchAction">
			<result name="success">/mtbfFormName.jsp</result>
		</action>

		<action name="mtbf_ui" class="com.spreadtrum.mtbf_ui.action.MTBF_uiHomeAction"
			method="execute">
			<result name="success">/mtbf_ui.jsp</result>
			<result type="redirectAction" name="search">
				<param name="actionName">mtbf_uiForm</param>
				<param name="type">${type}</param>
				<param name="searchProject">${searchProject}</param>
			</result>
		</action>

		<action name="mtbf_uiForm"
			class="com.spreadtrum.mtbf_ui.action.MTBF_uiFormSearchAction">
			<result name="success">/mtbf_uiFormName.jsp</result>
		</action>

		<action name="mtbf_uidownload" class="com.spreadtrum.mtbf_ui.action.MTBF_uiDownload">
			<result type="stream">
				<param name="bufferSize">2048</param>
			</result>
		</action>


		<action name="epe" class="com.spreadtrum.EPE.action.EPEHomeAction"
			method="execute">
			<result name="success">/epe.jsp</result>
			<result type="redirectAction" name="search">
				<param name="actionName">epeForm</param>
				<param name="type">${type}</param>
				<param name="searchProject">${searchProject}</param>
			</result>
		</action>

		<action name="epeForm" class="com.spreadtrum.EPE.action.EpeFormNameAction">
			<result name="success">/EpeFormName.jsp</result>
		</action>

		<action name="epedownload" class="com.spreadtrum.EPE.action.EPEDownload">
			<result type="stream">
				<param name="bufferSize">2048</param>
			</result>
		</action>


		<action name="managerLogin" class="com.spreadtrum.backstageLogin.LoginAction"
			method="loginVerify">
			<result name="success" type="redirectAction">
				<param name="actionName">back-stageManage</param>
			</result>
			<result name="loginFail">/managerLogin.jsp</result>
		</action>

		<action name="back-stageManage" class="com.spreadtrum.backstageManager.BackManageAction"
			method="execute">
			<interceptor-ref name="mystack" />
			<result name="success">/back-stageManage.jsp</result>
			<result name="loginFail">/managerLogin.jsp</result>
		</action>

		<action name="backManageSendMail" class="com.spreadtrum.backstageManager.MailSendAction"
			method="mail">
			<result name="success" type="redirectAction">
				<param name="actionName">back-stageManage</param>
			</result>
		</action>

		<action name="rdSendMailCtrl"
			class="com.spreadtrum.monkeyForRD.action.MonkeyForRDHomeAction"
			method="sendMailForRD">
		</action>

	</package>
</struts>
